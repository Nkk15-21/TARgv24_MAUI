<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="TARgv24.ValgusfoorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Title="Valgusfoor">

    <ContentPage.Resources>
        <!-- Цвета -->
        <Color x:Key="OffGray">#B0B0B0</Color>
        <Color x:Key="RedOn">#E53935</Color>
        <Color x:Key="YellowOn">#FDD835</Color>
        <Color x:Key="GreenOn">#43A047</Color>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="24">
        <!-- Статус -->
        <Label x:Name="statusLabel"
               Grid.Row="0"
               Text="Vali valgus"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,0,0,12"/>

        <!-- Три огня -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="16"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <!-- Красный -->
            <Border x:Name="redBox"
                    WidthRequest="120" HeightRequest="120"
                    Stroke="Black" StrokeThickness="1"
                    BackgroundColor="{StaticResource OffGray}">
                <Border.StrokeShape>
                    <shapes:RoundRectangle CornerRadius="60"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="RedTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Жёлтый -->
            <Border x:Name="yellowBox"
                    WidthRequest="120" HeightRequest="120"
                    Stroke="Black" StrokeThickness="1"
                    BackgroundColor="{StaticResource OffGray}">
                <Border.StrokeShape>
                    <shapes:RoundRectangle CornerRadius="60"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="YellowTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Зелёный -->
            <Border x:Name="greenBox"
                    WidthRequest="120" HeightRequest="120"
                    Stroke="Black" StrokeThickness="1"
                    BackgroundColor="{StaticResource OffGray}">
                <Border.StrokeShape>
                    <shapes:RoundRectangle CornerRadius="60"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GreenTapped"/>
                </Border.GestureRecognizers>
            </Border>
        </VerticalStackLayout>

        <!-- Кнопки -->
        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button x:Name="btnOn" Text="Sisse" Clicked="OnClicked"/>
                <Button x:Name="btnOff" Text="Välja" Clicked="OffClicked"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button x:Name="btnNight" Text="Öörežiim" Clicked="NightClicked"/>
                <Button x:Name="btnAuto" Text="Automaatrežiim" Clicked="AutoClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
