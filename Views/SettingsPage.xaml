<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TARgv24.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="{DynamicResource PageBg}">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Темы оформления" FontSize="20" />
        <Button Text="Light" Clicked="Light_Clicked"/>
        <Button Text="Dark" Clicked="Dark_Clicked"/>
        <Button Text="Blue" Clicked="Blue_Clicked"/>

        <Frame Padding="12" CornerRadius="12">
            <Label Text="Темы применяются через ResourceDictionary + DynamicResource (ThemeService)." FontSize="12"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
